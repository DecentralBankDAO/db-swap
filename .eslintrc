{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "plugin:import/recommended",
        "plugin:jest/recommended",
        "plugin:react/recommended",
        "plugin:jsx-a11y/recommended",
        "plugin:react/jsx-runtime",
        "airbnb-typescript",
        "airbnb/hooks"
    ],
    "rules": {
        "@typescript-eslint/indent": [
            "error",
            4
        ]
    },
    "plugins": [
        "react",
        "react-hooks",
        "@typescript-eslint"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        },
        "project": "./tsconfig.json"
    },
    "settings": {
        "react": {
            "version": "detect"
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "ignorePatterns": [
        "node_modules",
        "build",
        "dist",
        "public"
    ]
}
